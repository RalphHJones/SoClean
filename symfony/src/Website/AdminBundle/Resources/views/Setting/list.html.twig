{% extends "admin/admin_layout.html.twig" %}
{% block content %}
    
 

    <div class="form-search rowBottom">
      
        <div class="btn-group fr">
            <a class="btn btn-primary" href="{{ path(app.request.attributes.get('_route'),
         app.request.attributes.get('_route_params')) }}"><i class="icon-wrench icon-white"></i> {{ app.request.attributes.get('_route_params').category | default('All Settings') |title  }} </a>
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
            <ul class="dropdown-menu">
              {% include 'WebsiteAdminBundle:Setting:list-options.html.twig' %}
            </ul>
        </div>
    </div>
<br />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Setting</th>
                <th>Description</th>
                <th>Value</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.key }}</td>
                    <td>{{ entity.description | raw  | trunc(100)  }}</td>
                    <td class="w100">{{ entity.value  | striptags  | trunc(100) | raw }}</td>
                    <td>
                        <a class="btn" href="{{ url('admin_setting_edit', {'id': entity.id }) }}"><i class="icon-edit"></i> Edit</a>
                    </td>
                </tr>
            {% endfor %}		 
        </tbody>
    </table> 
    {{ knp_pagination_render(entities) }}


{% endblock %} 

