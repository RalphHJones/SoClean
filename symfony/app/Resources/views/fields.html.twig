{% block form_errors %}
{% spaceless %}
	{% if errors|length > 0 %}
		{% for error in errors %}
			<div class="error">{{
				error.messagePluralization is null
					? error.messageTemplate|trans(error.messageParameters, 'validators')
					: error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
			}}</div>
		{% endfor %}
	
	{% endif %}
{% endspaceless %}
{% endblock form_errors %}


{% block form_row %}
{% spaceless %}
    <div class="form-group">
        <div id="errors-{{ random() }}" class="errorHolder">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        </div>    
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}


